{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "useDefineForClassFields": true,
        "composite": true,
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "jsx": "react",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "noEmit": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "preserveWatchOutput": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "strict": true,
        "strictNullChecks": true,
        "target": "es2017",
        "types": [],
        "lib": ["ESNext", "DOM", "ES2018.AsyncIterable"]
    },
    "include": ["src/**/*"]
}
