{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "useDefineForClassFields": true,
      "composite": true,
      "declaration": true,
      "esModuleInterop": true,
      "incremental": true,
      "jsx": "react",
      "module": "esnext",
      "moduleResolution": "node",
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "preserveWatchOutput": true,
      "resolveJsonModule": true,
      "outDir": "lib",
      "rootDir": "src",
      "strict": true,
      "strictNullChecks": true,
      "target": "es2017",
      "types": [],
      "lib": ["ESNext", "DOM", "ES2018.AsyncIterable"]
    },
    "include": ["src/**/*"],
  }
  